<%- include('partials/header') %>

<link rel="stylesheet" href="css/register.css">


</head>

<body>

  <div class="container register-form">
    <div class="form">
      <div class="note">
        <p>Register for awesome Travel Experience!!!</p>
      </div>
      <form class="" action="/register" method="post">
        <div class="form-content">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" name="registerName" class="form-control" placeholder="Your Name *" value="" />
              </div>
              <div class="form-group">
                <input type="text" name="registerPhone" class="form-control" placeholder="Phone Number *" value="" />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <input type="password" name="registerPassword" class="form-control" placeholder="Your Password *" value="" />
              </div>
              <div class="form-group">
                <input type="password" name="registerConfirmPassowrd" class="form-control" placeholder="Confirm Password *" value="" />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <input type="email" name ="registerEmail" class="form-control" aria-describedby="emailHelp" placeholder="Email" value="" />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
            </div>
          </div>
          <button type="submit" name="RegisterButton" value="" class="btnSubmit">Submit</button>
        </div>

      </form>

    </div>
  </div>

  <%- include('partials/footer') %>
